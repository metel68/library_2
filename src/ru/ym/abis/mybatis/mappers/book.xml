<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="book">
	<resultMap id="bookResultMap" type="Book">
	  <id property="id" column="id"/>
      <result property="isbn" column="ISBN"/>
      <result property="year" column="year"/>
      <result property="title" column="title"/>
      <result property="size" column="size"/>
      <result property="count" column="count"/>
      <result property="description" column="description"/>
      <result property="addedAt" column="added_at"/>      
	  <association property="publisher" javaType="Publisher">
		  <id property="id" column="publisher_id"/>
		  <result property="name" column="pub_name"/>
	  </association>
	</resultMap>
	<select id="selectAll" resultMap="bookResultMap">
		select book.*, publisher.name as pub_name from book left join publisher on publisher.id = book.publisher_id
	</select>
	<select id="selectById" resultMap="bookResultMap">
		select book.*, publisher.name as pub_name from book left join publisher on publisher.id = book.publisher_id where id = #{id}
	</select>
	<select id="selectByTitle" resultMap="bookResultMap">
		select book.*, publisher.name as pub_name from book left join publisher on publisher.id = book.publisher_id where title = #{title}
	</select>
	<insert id="insertBook" parameterType="Book" flushCache="true"
		statementType="PREPARED" keyProperty="" keyColumn="" useGeneratedKeys="true"
		timeout="20">
		insert into book (isbn, title, year) values (#{isbn},
		#{title}, #{year})
	</insert>

	<update id="updateBook" parameterType="Book"
		flushCache="true" statementType="PREPARED" timeout="20">
		update book set (isbn=#{isbn}, title=#{title},
		year=#{year})
	</update>

	<delete id="deleteBook" parameterType="Book"
		flushCache="true" statementType="PREPARED" timeout="20">
		delete from book where id=#{id}
	</delete>
</mapper>